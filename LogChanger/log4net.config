<log4net debug="false">
  <appender name="LogToFile" type="log4net.Appender.FileAppender">
    <file value="c:\tmp\Starter.log" />
    <appendToFile value="true" />    
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{dd-MMM-yyyy HH:mm:ss} %-5p %logger{1} %message%newline" />
    </layout>
  </appender>
  <root>
    <level value="ALL" />
    <appender-ref ref="LogToFile" />
  </root>
</log4net>


